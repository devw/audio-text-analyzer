{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Audio Analyzer",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["input/sample.mp3"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Run with Output File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["input/sample.mp3", "-o", "output/analysis.txt"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}
